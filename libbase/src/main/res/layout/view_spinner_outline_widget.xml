<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_medium">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginRight="@dimen/spacing_large"
        android:focusableInTouchMode="true"
        android:paddingStart="@dimen/spacing_xxmicro"
        android:paddingTop="@dimen/spacing_micro"
        android:paddingEnd="@dimen/spacing_xxmicro"
        android:paddingBottom="@dimen/spacing_micro"
        android:background="@drawable/selector_spinner_outline"
        tools:listitem="@tools:sample/cities"
        tools:targetApi="n" />

    <TextView
        android:id="@+id/textView_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xxlarge"
        android:layout_marginBottom="@dimen/negative_spacing_xxlarge"
        android:paddingStart="@dimen/spacing_micro"
        android:paddingTop="@dimen/spacing_small"
        android:background="@color/white"
        android:paddingEnd="@dimen/spacing_micro"
        android:paddingBottom="@dimen/spacing_small"
        android:textSize="@dimen/font_caption1" />

    <ImageView
        android:id="@+id/imageView_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_standard"
        android:layout_marginEnd="@dimen/spacing_huge"
        android:layout_marginRight="@dimen/spacing_huge" />

</FrameLayout>